<% trusted = issue.untrusted? ? 'Untrusted' : 'Trusted' %>

<div class="issue">
    <h4>[<%=i+1%>] <%= issue.name %> (<%= trusted %> &mdash; Severity: <%= issue.severity %>)</h4>

    <p> <em><%= escapeHTML(issue.description) %></em></p>

    In <em><%= issue.vector.type %></em>

    <% if issue.active? %>
    input <em><%= issue.vector.affected_input_name %></em>
    <%end%>

    <% if issue.request && issue.request.method %>
    using <%= issue.request.method %>
    <%end%>

    at <strong><a href="<%= issue.vector.action %>"><%= issue.vector.action %></a></strong>.

    <p>&nbsp;</p>
</div>
