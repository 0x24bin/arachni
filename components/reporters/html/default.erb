<%# Encoding: utf-8 %>

<!DOCTYPE html>
<html lang="en">
<head>
    <title>
        <%= escapeHTML(report.url) %> ::
        Arachni Web Application Security Report
    </title>

    <!--
        Design by Tasos "Zapotek" Laskos <tasos.laskos@gmail.com>
        Copyright (c) Arachni 2011-2014.
     -->

    <script type="text/javascript">
        //<![CDATA[
        <%= erb 'js/lib/jquery.min.js' %>
        <%= erb 'js/lib/bootstrap.js' %>

        <%= erb 'js/helpers.js' %>
        <%= erb 'js/init.js.erb' %>
        //]]>
    </script>

    <style type="text/css">
        /*<![CDATA[*/
        <%=erb 'css/lib/font-awesome.css' %>
        <%=erb 'css/lib/bootstrap.css' %>
        <%=erb 'css/main.css' %>
        /*]]>*/
    </style>

</head>
<body>

<%= erb :navigation %>

<div class="container-fluid">
    <div class="page-header">
        <h1>
            <%= escapeHTML(report.url) %>
            <small>Generated on <%= Time.now %></small>
        </h1>
    </div>

    <div class="tab-content">
        <div class="tab-pane active" id="summary">
            <%= erb :summary %>
        </div>

        <div class="tab-pane" id="configuration">
            <%= erb :configuration %>
        </div>

        <div class="tab-pane" id="issues">
            <%= erb :issues %>
        </div>

        <div class="tab-pane" id="plugins">
            <%= erb :plugins %>
        </div>

        <div class="tab-pane" id="sitemap">
            <%= erb :sitemap %>
        </div>

    </div>
</div>
</body>
</html>
