<h2>Plugin results</h2>

<div id="plugin-tabs">
    <ul class="nav nav-tabs">
        <% plugins.keys.each.with_index do |name, i| %>
            <li <%= 'class="active"' if i == 0 %> >
                <a href="#!/plugins/<%= name %>">
                    <%= escapeHTML get_plugin_info( name )[:name] %>
                </a>
            </li>
        <% end %>
    </ul>

    <div class="tab-content">
    <% plugins.each do |name, html| %>
        <div class="tab-pane <%= 'active' if plugins.keys.first == name %>" id="plugins-<%= name %>">
            <pre><%= prep_description( get_plugin_info(name)[:description] ) %></pre>

            <p><%= html.recode %></p>
        </div>
    <% end %>
    </div>

</div>
