<%
   not_available = '<p class="alert alert-info">Not available</p>'
%>

<% if issue.remarks.any? %>
    <div class="alert alert-info">
        <p>
            <i class="fa fa-info-circle"></i>
            System components have attached some insights to this issue.
        </p>

        <hr/>

        <ul>
            <% issue.remarks.each do |commenter, remarks| %>
                <li>
                    <%= escapeHTML commenter.to_s.capitalize %>

                    <ul>
                        <% remarks.each do |remark| %>
                            <li>
                                <%= escapeHTML remark %>
                            </li>
                        <% end %>
                    </ul>
                </li>
            <% end %>
        </ul>
    </div>
<% end %>

<% if parent_issue.platform_type %>
<p class="alert alert-info">
    Affected platform type belongs to the
    <strong><%= Arachni::Platform::Manager::TYPES[parent_issue.platform_type] %></strong>
    category, identified as
    <strong><%= Arachni::Platform::Manager.new.fullname parent_issue.platform_name %></strong>.
</p>
<% end %>

<table class="table">
    <thead>
    <tr>
        <% if issue.vector.respond_to?(:seed) && issue.vector.seed %>
            <th>
                Injected seed

                <a href="#" rel="tooltip"
                   title="This seed uncovered the vulnerable vector during the audit.">
                    <i class="fa fa-info"></i>
                </a>
            </th>
        <% end %>

        <% if issue.signature %>
            <th>
                Signature

                <a href="#" rel="tooltip"
                   title="This signature was used to detect the issue.">
                    <i class="fa fa-info"></i>
                </a>
            </th>
        <% end %>

        <% if issue.proof %>
            <th>
                Proof

                <a href="#" rel="tooltip"
                   title="This string was used to verify the existence of the issue.">
                    <i class="fa fa-info"></i>
                </a>
            </th>
        <% end %>

    </tr>
    </thead>
    <tr>

        <% if issue.vector.respond_to?(:seed) && issue.vector.seed %>
            <td class="wrap">
                <%= issue.vector.seed ?
                            "<pre>#{escapeHTML(issue.vector.seed)}</pre>" :
                            not_available %>
            </td>
        <% end %>

        <% if issue.signature %>
            <td class="wrap">
                <%= issue.signature ?
                            "<pre>#{escapeHTML(issue.signature)}</pre>" :
                            not_available %>
            </td>
        <% end %>

        <% if issue.proof %>
            <td class="wrap">
                <%= issue.proof ?
                            "<pre class='code-container'>#{escapeHTML(issue.proof)}</pre>" :
                            not_available %>
            </td>
        <% end %>
    </tr>
</table>
