<%
   variation = issue.variations.first
%>

<div class="panel-group">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a href="<%= issue_location( variation ) %>/vector">
                    <i class="fa fa-link"></i>
                </a>

                <a data-toggle="collapse" href="#<%= id %>-vector">
                    Vector information
                </a>
            </h4>
        </div>
        <div id="<%= id %>-vector" class="panel-collapse collapse">
            <div class="panel-body">
                <%= erb 'issue/vector.erb', id: id, vector: variation.vector %>
            </div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a href="<%= issue_location( variation ) %>/affected_page">
                    <i class="fa fa-link"></i>
                </a>

                <a data-toggle="collapse" href="#<%= id %>-affected_page">
                    Affected page:

                    <code><%= escapeHTML(variation.page.dom.url) %></code>
                </a>
            </h4>
        </div>
        <div id="<%= id %>-affected_page" class="panel-collapse collapse">
            <div class="panel-body">
                <%= erb 'issue/page.erb', id: "#{id}-affected_page", page: variation.page %>
            </div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a href="<%= issue_location( variation ) %>/referring_page">
                    <i class="fa fa-link"></i>
                </a>

                <a data-toggle="collapse" href="#<%= id %>-referring_page">
                    Referring page:

                    <code><%= escapeHTML(variation.referring_page.dom.url) %></code>
                </a>
            </h4>
        </div>
        <div id="<%= id %>-referring_page" class="panel-collapse collapse">
            <div class="panel-body">
                <%= erb 'issue/page.erb', id: "#{id}-referring_page", page: variation.referring_page %>
            </div>
        </div>
    </div>
</div>
